@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{ string color = ""; }

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Konu</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                                if(item.Status == "Duyuru")
                                {
                                    color = "badge badge-danger";
                                }
                                else if(item.Status == "Önemli Duyuru")
                                {
                                    color = "badge badge-warning";
                                }
                                else if (item.Status == "İlk Duyuru")
                                {
                                    color = "badge badge-success";
                                }
                                else if (item.Status == "Yeni Referans" || item.Status == "Yeni Servis")
                                {
                                    color = "badge badge-info";
                                }
                        <tr>
                            <th>@item.ID</th>
                            <td>@item.Title</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            <td><label class="@color">@item.Status</label></td>
                            <td><a href="/Writer/Default/AnnouncementDetails/@item.ID" class="btn btn-outline-primary">Detayı Gör</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
