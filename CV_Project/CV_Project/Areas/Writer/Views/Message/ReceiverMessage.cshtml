@using EntityLayer.Concrete
@model List<SenderReceiverMessage>
@{
    ViewData["Title"] = "ReceiverMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var group in Model.GroupBy(x => x.Sender))
                            {
                                var sender = group.Key;
                                var messages = group.ToList();
                            <tr>
                                <th>@messages.First().ID</th>
                                <td>@sender</td>
                                <td>@(((DateTime)messages.First().Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Writer/Message/ReceiverMessageDetails?sender=@messages.First().Sender&receiver=@messages.First().Receiver" class="btn btn-outline-primary">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

