@using EntityLayer.Concrete
@model List<SenderReceiverMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alıcı</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var group in Model.GroupBy(x => x.Sender))
                        {
                            var sender = group.Key;
                            var message = group.First();
                            <tr>
                                <th>@message.ID</th>
                                <td>@message.Receiver</td>
                                <td>@(((DateTime)message.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Writer/Message/SenderMessageDetails?sender=@message.Sender&receiver=@message.Receiver" class="btn btn-outline-primary">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



