@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.SocialMediaID, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    <label>Sosyal Medya</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Url</label>
                    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Icon İsim</label>
                    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="Status">
                        <label class="custom-control-label" for="customSwitch1">Durum</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "SocialMedia")'">İptal</button>
            </form>
        </div>
    </div>
</div>