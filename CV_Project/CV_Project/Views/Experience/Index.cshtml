@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                        <tr>
                            <td style="color:white; font-weight:bold">@item.ExperienceID</td>
                            <td style="color:white">@item.Name</td>
                            <td style="color:white">@item.Date</td>
                            <td style="white-space:pre-line; color:white ;text-anchor:start; text-align:center">
                                @item.Description
                            </td>
                            <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger" onclick="return confirm('Gerçekten silmek istiyor musunuz?')">Sil</a></td>
                            <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                            }
                    </tbody>
                </table>
                <div style="text-align: left;">
                    <br />
                    <a href="/Experience/AddExperience/" class="btn btn-outline-info">Yeni Deneyim Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
