@using EntityLayer.Concrete
@model List<Testimonials>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Müşteri Adı </th>
                                <th> Şirketi </th>
                                <th> Açıklama </th>
                                <th> Sil </th>
                                <th> Güncelle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        <span class="pl-2" style="color:white">@item.ClientName</span>
                                    </td>
                                    <td style="color:white" font-weight:bold"> @item.Company </td>
                                    <td style="white-space:pre-line; color:white ;text-anchor:start; text-align:center"> @item.Comment </td>
                                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialsID" class="btn btn-outline-danger" onclick="return confirm('Gerçekten silmek istiyor musunuz?')">Sil</a></td>
                                    <td><a href="/Testimonial/EditTestimonial/@item.TestimonialsID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div style="text-align: left;">
                        <br />
                        <a href="/Testimonial/AddTestimonial/" class="btn btn-outline-info">Yeni Müşteri Yorumu Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>