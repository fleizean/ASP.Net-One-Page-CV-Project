@model EntityLayer.Concrete.Testimonials

@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.TestimonialsID, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    <label>Müşteri İsim</label>
                    @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Şirketi</label>
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Comment, 8, 3, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Resim Url</label>
                    @Html.TextBoxFor(x => x.ImageUrl,  new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Testimonial")'">İptal</button>
            </form>
        </div>
    </div>
</div>