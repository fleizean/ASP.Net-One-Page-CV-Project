@using EntityLayer.Concrete
@model List<Testimonials>

<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Müşteri Yorumları</h2>
        </div>
        <div class="row">
            @for (int i = 0; i < Model.Count; i += 2)
                {
            <div class="col-md-6 mb-5" data-aos="fade-right" data-aos-delay="100">
                <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@Model[i].Comment</span></div>
                <div class="d-flex justify-content-end align-items-end">
                    <div class="text-end me-2">
                        <div class="fw-bolder">@Model[i].ClientName</div>
                        <div class="text-small">@Model[i].Company</div>
                    </div><img class="me-md-3 rounded" src="@Model[i].ImageUrl" width="96" height="96" alt="client 1" />
                </div>
            </div>
            @if (i + 1 < Model.Count)
                {
            <div class="col-md-6 mb-5" data-aos="fade-left" data-aos-delay="300">
                <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@Model[i + 1].Comment</span></div>
                <div class="d-flex justify-content-end align-items-end">
                    <div class="text-end me-2">
                        <div class="fw-bolder">@Model[i + 1].ClientName</div>
                        <div class="text-small">@Model[i + 1].Company</div>
                    </div><img class="me-md-3 rounded" src="@Model[i + 1].ImageUrl" width="96" height="96" alt="client 1" />
                </div>
            </div>
                    }
                }
        </div>
    </div>
</div>
